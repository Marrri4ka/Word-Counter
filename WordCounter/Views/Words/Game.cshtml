      <input id="userSentence" name="userSentence" type="text"><br>
      <button id="button" type="submit">Play</button>
    </form>



    <a class="card-link" href="/">Play</a>
    <a class="card-link" href="/categories">Back to categories</a>
  </div>
</div>
