<html>
<body>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <div class="jumbotron">
<center><h1>Let's play</h1></center>
  </div>


  @if (@Model == null)
  {

  }
  else if (@Model.IsValidInput() == "")
  {
  <p>Your word @Model.GetUserWord() appears  @Model.CountWords() times in @Model.GetUserSentence()</p>
  }
  else
  {
  <p>please enter only numbers!</p>
  }
    <form action="/wordgame" method="post">
      <label for="userWord">Enter your word</label>
